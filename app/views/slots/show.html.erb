<div class="page-header">
  <h3>Slot #<%= @slot.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @slot.date %></dd>

      <dt>Time</dt>
      <dd><%= @slot.time %></dd>

      <dt>Courts</dt>
      <dd>
        <% if @slot.courts.present? %>
          <a href="/courts/<%= @slot.courts_id %>">
            <%= @slot.courts.owner_id %>
          </a>
        <% end %>
      </dd>

      <dt>Users</dt>
      <dd>
        <% if @slot.users.present? %>
          <a href="/users/<%= @slot.users_id %>">
            <%= @slot.users.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/slots" class="btn btn-primary">
        Back
      </a>
      <a href="/slots/<%= @slot.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_slot/<%= @slot.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
