<div class="page-header">
  <h1>
    Slots
    <a href="/slots/new" class="btn btn-lg btn-success">New Slot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Courts</th>
        <th>Users</th>
        <th>Actions</th>
      </tr>

      <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.date %></td>
        <td><%= slot.time %></td>
        <td>
          <% if slot.courts.present? %>
            <a href="/courts/<%= slot.courts.id %>">
              <%= slot.courts.owner_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if slot.users.present? %>
            <a href="/users/<%= slot.users.id %>">
              <%= slot.users.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/slots/<%= slot.id %>" class="btn btn-primary">Show</a>
          <a href="/slots/<%= slot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_slot/<%= slot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @slots, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
